{
  "name": "personal-dashboard",
  "version": "1.0.0",
  "description": "A modern, responsive personal dashboard with real-time information",
  "main": "src/index.html",
  "scripts": {
    "dev": "cd src && python3 -m http.server 8000",
    "start": "npm run dev",
    "build": "node scripts/build.js",
